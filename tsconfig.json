{
    "compilerOptions": {
      "target": "ES2022",               
      "module": "ESNext",                
      "moduleResolution": "Node",        
      "outDir": "./dist",                
      "rootDir": "./src",                
      "strict": true,                    
      "esModuleInterop": true,           
      "forceConsistentCasingInFileNames": true, 
      "skipLibCheck": true,              
      "resolveJsonModule": true,         
      "noImplicitAny": true,             
      "strictNullChecks": true,          
      "allowSyntheticDefaultImports": true 
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }
  